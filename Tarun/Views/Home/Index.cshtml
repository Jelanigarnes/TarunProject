@{
    ViewData["Title"] = "Home Page";
}
<h1><strong>Connecting People in the Community</strong></h1>
<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/people2.jpg" style=" width:1200px;height:400px;" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Connecting your community

                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/people3.jpg" style=" width:1200px;height:400px;" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    In need of any service.

                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/people4.jpg" style=" width:1200px;height:400px;" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Tarun is here to connect you.

                </p>
            </div>

        </div>

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div>
        <h2>Welcome to Connecting People </h2>
    </div>
    <div class="col-md-3">
        <h2>Need Help?</h2>
        <h4>Start Here</h4>
        <ul>
            <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
            <li><a href="/Service_Provider/Create">Register as a Service Provider</a></li>
            <li><a href="/Service_Requester/Create">Register as a Service Requester</a></li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Application Policies and Agreements</h2>
        <ul>
            <li>Our Policy</li>
            <li>Terms of Agreement</li>
            
        </ul>
    </div>
</div>
