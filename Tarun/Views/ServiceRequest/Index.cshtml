@model IEnumerable<Tarun.Models.ServiceRequest>

@{
    ViewData["Title"] = "Index";
}

<h2>My Services</h2>

<p>
    <a asp-action="Create">Create New Service Request</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Service_Requester)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SRStartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SREndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.APT_House)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Service_Requester.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SRStartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SREndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.APT_House)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ServiceRequestID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ServiceRequestID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ServiceRequestID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
